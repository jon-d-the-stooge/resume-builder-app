# =============================================================================
# Resume Builder App - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# Required variables are marked with [REQUIRED].

# =============================================================================
# Server Configuration
# =============================================================================

# Port the server listens on (default: 3001)
PORT=3001

# Node environment: development, production, test
NODE_ENV=development

# =============================================================================
# Database Configuration
# =============================================================================

# For SQLite (recommended for local development):
DATABASE_PATH=./data/local.db

# For PostgreSQL/MySQL (use DATABASE_URL instead of DATABASE_PATH):
# DATABASE_URL=postgresql://user:password@localhost:5432/resume_builder
# DATABASE_URL=mysql://user:password@localhost:3306/resume_builder

# Data directory for persistent storage (usage tracking, etc.)
DATA_DIR=./data

# =============================================================================
# Authentication Configuration
# =============================================================================

# Auth provider to use: auth0, clerk, supabase, or none
# Set AUTH_DISABLED=true to bypass authentication (development only)
AUTH_PROVIDER=auth0
AUTH_DISABLED=true

# --- Auth0 Configuration ---
# Get these from your Auth0 dashboard (https://manage.auth0.com):
# 1. Create an API in Auth0 Dashboard > Applications > APIs
# 2. AUTH0_DOMAIN: Your tenant domain (e.g., 'your-tenant.auth0.com')
# 3. AUTH0_AUDIENCE: The API identifier you set when creating the API
AUTH0_DOMAIN=
AUTH0_AUDIENCE=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=

# --- Clerk Configuration ---
# Get these from your Clerk dashboard (https://dashboard.clerk.com)
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=

# --- Supabase Configuration ---
# Get these from your Supabase project settings
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# =============================================================================
# LLM API Configuration [REQUIRED for AI features]
# =============================================================================

# At least one API key is required for AI-powered features

# Anthropic (Claude) - Get from https://console.anthropic.com
ANTHROPIC_API_KEY=

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Default LLM provider: anthropic or openai (defaults to anthropic if key is set)
LLM_PROVIDER=anthropic

# =============================================================================
# External API Keys
# =============================================================================

# RapidAPI Key (for JSearch job search API)
# Get from https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
RAPIDAPI_KEY=

# Adzuna Job Search API
# Get from https://developer.adzuna.com
ADZUNA_APP_ID=
ADZUNA_API_KEY=

# =============================================================================
# CORS Configuration
# =============================================================================

# Frontend URL for CORS (comma-separated for multiple origins)
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# Rate Limiting
# =============================================================================

# Maximum API requests per user per day
RATE_LIMIT_REQUESTS_PER_DAY=100

# Maximum tokens per user per day
RATE_LIMIT_TOKENS_PER_DAY=100000

# =============================================================================
# Admin Configuration
# =============================================================================

# Secret key for admin endpoints (leave empty to disable admin routes)
ADMIN_SECRET=
